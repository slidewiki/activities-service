{
  "name": "activities-service",
  "version": "0.1.0",
  "description": "This service handles activity stream management for slidewiki.",
  "repository": {
    "type": "git",
    "url": "https://github.com/slidewiki/activities-service"
  },
  "bugs": "https://github.com/slidewiki/activities-service/issues",
  "author": "Dejan Paunovic",
  "license": "MPL-2.0",
  "main": "server.js",
  "scripts": {
    "clean": "rm -R ./node_modules/ ./coverage/",
    "lint": "eslint -c .eslintrc ./**/*.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha ./tests/unit_*.js",
    "test:integration": "mocha ./tests/integration_*.js",
    "coverage": "istanbul cover _mocha --include-all-sources ./tests/*.js",
    "coverall": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "countLOC": "sloc -f cli-table -k total,source,comment,empty -e node_modules\\|coverage ./",
    "countLOC:details": "sloc -f cli-table -d -e node_modules\\|coverage ./",
    "start:watch": "nodemon",
    "start:mongodb": "docker run -d --name mongotest -p 27018:27017 mongo",
    "stop:mongodb": "docker stop mongotest && docker rm mongotest"
  },
  "dependencies": {
    "ajv": "^4.0.5",
    "boom": "^3.1.3",
    "database-cleaner": "^0.13.0",
    "good": "^7.0.0",
    "good-console": "^6.1.1",
    "good-squeeze": "^3.0.1",
    "hapi": "^13.4.0",
    "hapi-swagger": "^5.1.0",
    "inert": "^4.0.0",
    "joi": "^8.1.0",
    "mongodb": "^2.1.19",
    "vision": "^4.1.0"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "coveralls": "^2.11.9",
    "eslint": "^2.10.2",
    "eslint-plugin-promise": "^1.1.0",
    "istanbul": "^0.4.3",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.2",
    "sloc": "^0.1.10"
  }
}
